{
    "name": "shopify-product-importer",
    "version": "1.0.0",
    "description": "Product importer for CJ and Pepperjam APIs to Shopify",
    "private": false,
    "scripts": {
        "// === 开发环境 ===": "",
        "dev": "node scripts/dev.js",
        "dev:server": "tsx watch --env-file=.env server/index.ts",
        "dev:client": "vite --port 5173",
        "dev:proxy": "node simple-https-proxy.js",
        "dev:shopify": "shopify app dev",
        "// === 构建 ===": "",
        "build": "node scripts/build.js",
        "build:shared": "tsc -p shared/tsconfig.json",
        "build:server": "tsc -p server/tsconfig.json",
        "build:client": "vite build",
        "build:watch": "concurrently \"npm run build:server -- --watch\" \"npm run build:client -- --watch\"",
        "// === 生产环境 ===": "",
        "start": "NODE_ENV=production node dist/server/index.js",
        "start:prod": "npm run build && npm run start",
        "preview": "vite preview",
        "// === 工具和维护 ===": "",
        "clean": "rimraf dist",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "npm run lint -- --fix",
        "type-check": "tsc --noEmit",
        "type-check:server": "tsc -p server/tsconfig.json --noEmit",
        "type-check:client": "tsc -p client/tsconfig.json --noEmit",
        "// === 数据库 ===": "",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "db:studio": "prisma studio",
        "// === 部署 ===": "",
        "postinstall": "npm run db:generate",
        "deploy": "node scripts/deploy.js",
        "deploy:prod": "NODE_ENV=production npm run deploy",
        "// === 测试和调试 ===": "",
        "test:routes": "node scripts/test-routes.js",
        "check-env": "node scripts/check-env.js",
        "// === Shopify CLI ===": "",
        "shopify:generate": "shopify app init",
        "shopify:deploy": "shopify app deploy"
    },
    "dependencies": {
        "@prisma/client": "^6.8.2",
        "@shopify/admin-api-client": "^1.0.1",
        "@shopify/app-bridge": "^3.7.10",
        "@shopify/app-bridge-react": "^3.7.10",
        "@shopify/polaris": "^13.9.5",
        "@shopify/polaris-icons": "^9.3.1",
        "@shopify/shopify-api": "11.12.0",
        "axios": "^1.6.2",
        "bull": "^4.12.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.21.2",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "node-cron": "^4.0.7",
        "prisma": "^6.8.2",

        "winston": "^3.11.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@tanstack/react-query": "^5.12.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.2",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^22.15.21",
        "@types/react": "^19.1.5",
        "@types/react-dom": "^19.1.5",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "@vitejs/plugin-react": "^4.2.1",
        "concurrently": "^9.1.2",
        "eslint": "^9.27.0",
        "module-alias": "^2.2.3",
        "nodemon": "^3.0.2",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^4.19.4",
        "typescript": "^5.3.3",
        "vite": "^6.3.5"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "_moduleAliases": {
        "@shared": "dist/shared",
        "@server": "dist/server"
    },
    "keywords": [
        "shopify",
        "product-import",
        "cj",
        "pepperjam",
        "affiliate-marketing"
    ],
    "author": "Your Name <your.email@example.com>",
    "license": "MIT",
    "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}